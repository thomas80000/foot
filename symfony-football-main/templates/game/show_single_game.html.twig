{% extends 'base.html.twig' %}

{% block title %}Hello GameController!
{% endblock %}

{% block body %}
	<h1>Date du match:
		{{ game.date | date | format_datetime('full', 'short', locale='fr')}}</h1>

	<p>Equipes :
		{% for team in game.teams %}
			{{ team.name }}
		{% endfor %}
	</p>
	{% if game.winner %}
		Vainqueur du match:
		{{ game.winner.name }}
	{% else %}
		{% if form is defined %}
			{{ form(form) }}
		{% endif %}
	{% endif %}
	{% endblock %}
